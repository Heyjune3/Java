package interface_poly.array;

public class Car {
	
	String model;
	String color;
	
	int speed;
	
	Tire[] tires;
	
	public Car() {
		tires = new Tire[] {
				new NormalTire(),
				new NormalTire(),
				new NormalTire(),
				new NormalTire()
		};
	}
	
	public void run() {
		for(Tire tire : tires) {
			tire.roll();
		}
	}
	
	public static void main(String[] args) {
		Car car = new Car();
		car.run();
		System.out.println("=======================");
		
		Tire[] tires = new WetTire[4];
		
	}

}




